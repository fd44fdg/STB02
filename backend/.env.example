# ========================================
# Production Database Configuration
# ========================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=shuati_production
DB_PORT=3306

# Connection pool settings for production
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=30000

# ========================================
# Security Configuration
# ========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=MUST_BE_SET_IN_PRODUCTION_64_CHARS_MINIMUM
JWT_EXPIRES_IN=24h

# ========================================
# Server Configuration
# ========================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# CORS origins (production domains only)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# Rate Limiting (Production Settings)
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# ========================================
# Monitoring and Health
# ========================================
HEALTH_CHECK_TIMEOUT=5000
ENABLE_METRICS=true

# ========================================
# File Upload Security
# ========================================
UPLOAD_MAX_SIZE=5mb
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp

# ========================================
# WeChat Mini Program (Optional)
# ========================================
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# ========================================
# Redis Cache (Optional for Production)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ========================================
# Logging Configuration
# ========================================
LOG_FILE_PATH=/var/log/shuati/app.log
LOG_ERROR_FILE=/var/log/shuati/error.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10